# Enforce LF line endings for WSL compatibility and stable SHA256 hashing
* text=auto eol=lf

# Explicitly enforce LF for common text file types
*.md text eol=lf
*.py text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.sh text eol=lf

# Governance indices (stable SHA256 hashing)
docs/01_governance/*.json text eol=lf

# Git hooks (WSL compatibility)
scripts/hooks/* text eol=lf
