{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "opencode_dogfood_run_summary",
    "title": "OpenCode Dogfood Run Summary",
    "description": "Schema for overall run summary in OpenCode dogfooding suite.",
    "type": "object",
    "required": [
        "schema_id",
        "schema_version",
        "run_id",
        "repo_commit",
        "total_cases",
        "passed",
        "failed",
        "skipped",
        "final_verdict",
        "cases"
    ],
    "properties": {
        "schema_id": {
            "const": "opencode_dogfood_run_summary"
        },
        "schema_version": {
            "const": "1.0"
        },
        "run_id": {
            "type": "string",
            "pattern": "^RUN_[0-9]{4}$"
        },
        "repo_commit": {
            "type": "string",
            "pattern": "^[a-f0-9]{40}$"
        },
        "total_cases": {
            "type": "integer",
            "minimum": 0
        },
        "passed": {
            "type": "integer",
            "minimum": 0
        },
        "failed": {
            "type": "integer",
            "minimum": 0
        },
        "skipped": {
            "type": "integer",
            "minimum": 0
        },
        "final_verdict": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL"
            ]
        },
        "stop_reason": {
            "type": [
                "string",
                "null"
            ],
            "description": "Non-null if run stopped early (fail-fast or error)"
        },
        "cases": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "case_id",
                    "status",
                    "duration_ms"
                ],
                "properties": {
                    "case_id": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "PASS",
                            "FAIL",
                            "SKIPPED"
                        ]
                    },
                    "duration_ms": {
                        "type": "integer"
                    },
                    "failure_code": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}